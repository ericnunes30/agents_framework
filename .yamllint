extends: default

rules:
  # Allow longer lines for readability
  line-length:
    max: 120
  
  # Allow multiple spaces for alignment
  indentation:
    spaces: 2
    check-multi-line-strings: false
  
  # Don't require document start markers
  document-start: disable
  
  # Allow truthy values like 'true', 'false', 'yes', 'no'
  truthy:
    allowed-values: ['true', 'false', 'yes', 'no']

ignore: |
  node_modules/
  dist/
  .git/
  logs/