 {
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "openrouter_adam": {
       "npm": "@ai-sdk/openai-compatible",
       "options": {
          "baseURL": "https://openrouter.ai/api/v1",
          "apiKey": "{env:OPENROUTER_API_KEY}"
        },
        "models": {
          "mistralai/devstral-medium": {},
          "moonshotai/kimi-k2": {}
        }
     }
  },
  "mode": {
    "generate-prp": {
      "model": "moonshotai/kimi-k2",
      "prompt": "{file:./opencode/prompts/generate-prp.txt}",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true,
        "read": true,
        "list": true,
        "patch": true,
        "todowrite": true,
        "todoread": true,
        "webfetch": true,
        "sourcegraph": true
      }
    }
  },
  "layout": "stretch"
}